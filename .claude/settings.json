{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE=$(jq -r '.tool_input.file_path') && npx eslint --fix \"$FILE\" && npx prettier --write \"$FILE\""
          }
        ]
      }
    ]
  }
}
